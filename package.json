{
  "name": "eslint-config-ibmresearch",
  "version": "0.19.0",
  "description": "ESLint shareable config for the IBM Research JavaScript style guide",
  "license": "MIT",
  "repository": "github:IBMResearch/eslint-config-ibmresearch",
  "main": "index.js",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "format": "npm-run-all format:*",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "prettier --write \"**/*{js,json,md}\"",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint \"**/*.js\""
  },
  "files": [
    "index.js",
    "typescript-lit-html.js",
    "typescript.js"
  ],
  "keywords": [
    "eslint",
    "eslint-config"
  ],
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.9",
    "@typescript-eslint/parser": "^4.9",
    "eslint": "^7.15",
    "eslint-plugin-lit": "^1.2",
    "eslint-plugin-lit-a11y": "^1.0",
    "eslint-plugin-wc": "^1.2",
    "prettier": "^2.0"
  },
  "peerDependenciesMeta": {
    "@typescript-eslint/eslint-plugin": {
      "optional": true
    },
    "@typescript-eslint/parser": {
      "optional": true
    },
    "eslint-plugin-lit": {
      "optional": true
    },
    "eslint-plugin-lit-a11y": {
      "optional": true
    },
    "eslint-plugin-wc": {
      "optional": true
    }
  },
  "dependencies": {
    "eslint-config-prettier": "^7.2.0"
  },
  "devDependencies": {
    "eslint": "^7.19.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "~2.2.1",
    "prettier-plugin-package": "^1.3.0"
  },
  "eslintConfig": {
    "extends": "./index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*{js,json,md}": "prettier --write",
    "**/*.js": "eslint --fix"
  },
  "prettier": {
    "singleQuote": true
  }
}
