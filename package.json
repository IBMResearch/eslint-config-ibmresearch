{
  "name": "eslint-config-ibmresearch",
  "version": "0.21.0",
  "description": "ESLint shareable config for the IBM Research JavaScript style guide",
  "license": "MIT",
  "repository": "github:IBMResearch/eslint-config-ibmresearch",
  "main": "index.js",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "format": "npm-run-all format:*",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "prettier . --write",
    "lint": "npm-run-all --parallel lint:*",
    "lint:eslint": "eslint .",
    "prepare": "husky install"
  },
  "files": [
    "imports.js",
    "index.js",
    "typescript-lit.js",
    "typescript.js"
  ],
  "keywords": [
    "eslint",
    "eslint-config"
  ],
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22",
    "@typescript-eslint/parser": "^4.22",
    "eslint": "^7.25",
    "eslint-plugin-lit": "^1.3",
    "eslint-plugin-lit-a11y": "^1.0",
    "eslint-plugin-wc": "^1.3",
    "prettier": "^2.2"
  },
  "peerDependenciesMeta": {
    "@typescript-eslint/eslint-plugin": {
      "optional": true
    },
    "@typescript-eslint/parser": {
      "optional": true
    },
    "eslint-plugin-lit": {
      "optional": true
    },
    "eslint-plugin-lit-a11y": {
      "optional": true
    },
    "eslint-plugin-wc": {
      "optional": true
    }
  },
  "dependencies": {
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1"
  },
  "devDependencies": {
    "eslint": "^7.25.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "~2.2.1",
    "prettier-plugin-package": "^1.3.0"
  },
  "eslintConfig": {
    "extends": "./index.js"
  },
  "lint-staged": {
    "**/*{js,json,md,yml}": "prettier --write",
    "**/*.js": "eslint --fix"
  },
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.yml",
        "options": {
          "singleQuote": false
        }
      }
    ]
  }
}
