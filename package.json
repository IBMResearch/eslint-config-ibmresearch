{
  "name": "eslint-config-ibmresearch",
  "version": "0.25.1",
  "description": "ESLint shareable config for the IBM Research JavaScript style guide",
  "license": "MIT",
  "repository": "github:IBMResearch/eslint-config-ibmresearch",
  "main": "index.js",
  "scripts": {
    "format": "npm-run-all format:*",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "prettier . --write",
    "lint": "npm-run-all --parallel lint:*",
    "lint:eslint": "eslint .",
    "prepare": "npx simple-git-hooks"
  },
  "files": [
    "imports.js",
    "index.js",
    "typescript-lit.js",
    "typescript.js"
  ],
  "keywords": [
    "eslint",
    "eslint-config"
  ],
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "5.x",
    "@typescript-eslint/parser": "5.x",
    "eslint": "8.x",
    "eslint-plugin-lit": "1.x",
    "eslint-plugin-lit-a11y": "2.x",
    "eslint-plugin-wc": "1.x",
    "prettier": "2.x"
  },
  "peerDependenciesMeta": {
    "@typescript-eslint/eslint-plugin": {
      "optional": true
    },
    "@typescript-eslint/parser": {
      "optional": true
    },
    "eslint-plugin-lit": {
      "optional": true
    },
    "eslint-plugin-lit-a11y": {
      "optional": true
    },
    "eslint-plugin-wc": {
      "optional": true
    }
  },
  "dependencies": {
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0"
  },
  "devDependencies": {
    "eslint": "^8.27.0",
    "nano-staged": "~0.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "~2.7.1",
    "prettier-plugin-package": "^1.3.0",
    "simple-git-hooks": "^2.8.1"
  },
  "eslintConfig": {
    "extends": "./index.js"
  },
  "nano-staged": {
    "**/*{js,json,md,yml}": "prettier --write",
    "**/*.js": "eslint --fix"
  },
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.yml",
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  }
}
